@model MALON_GLOBAL_WEBAPP.Models.UserAccount

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp - SAPP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Spectral" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="~/assets/css/fm.checkator.jquery.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/assets/js/jquery-1.11.0.min.js"></script>
    <script src="~/assets/js/fm.checkator.jquery.js"></script>
    <link rel="stylesheet" href="~/assets/css/style.css" />

</head>
<body>
    <div class="row">
        <div class="container-fluid">
            <div class="row no-gutter">
                <!-- The image half -->
                <div class="col-md-6 d-none d-md-flex flex-column text-center left">
                    <div class="bg-image d-flex flex-column align-content-center justify-content-center text-center">
                        <img src="~/assets/img/Logo.png" class="m-auto img-fluid" id="bg-logo" alt="SAPP" />
                        <p class="h3 mt-4 text-center welcome">Welcome Aboard</p>
                        <p class="welcome">Just a couple of clicks and we start</p>
                    </div>
                    <div class="d-flex flex-row align-content-center justify-content-center">
                        <div class="form-check form-check-inline mx-1">
                            <input class="form-check-input checkator" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" checked />
                        </div>
                        <div class="form-check form-check-inline mx-1">
                            <input class="form-check-input checkator" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" />
                        </div>
                        <div class="form-check form-check-inline mx-1">
                            <input class="form-check-input checkator" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3" />
                        </div>
                    </div>
                </div>

                <!-- The content half -->
                <div class="col-md-6 bg-light">
                    <div class="login d-flex align-items-center py-5">
                        <!-- Demo content-->
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10 d-md-none col-xl-7 mx-auto">
                                    <div class="bg-image d-flex flex-column align-content-center justify-content-center text-center">
                                        <img src="~/assets/img/Logo.png" class="m-auto img-fluid" id="bg-logo" alt="SAPP" />
                                        <p class="h3 mt-4 text-center welcome">Welcome Aboard</p>
                                        <p class="welcome">Just a couple of clicks and we start</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-10 col-xl-7 mx-auto mobile-view-form">
                                    <h3 class="display-4" id="signin">Create Account</h3>
                                    @if (TempData["Message"] != null)
                                        {
                                            <div class="alert alert-danger small">
                                                <strong onclick="">Error! @TempData["Alertmessage"]</strong>
                                            </div>
                                        }
                                    <form asp-action="SignUp">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group mb-3">
                                            <div class="row">

                                                @*<h4>@viewBag.error.ToStrirng() </h4>*@
                                                @*<h4>@viewBag.success.ToStrirng() </h4>*@
                                                <div class="col-md-6 col-12">
                                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                                    <div class="input-group">
                                                        <input asp-for="FirstName" required="" type="text" id="firstName" class="form-control border-0" placeholder="John" aria-label="First name" />
                                                        <span class="material-icons input-group-text border-0 text-muted">person</span>
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-md-6 col-12">
                                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                                    <div class="input-group">
                                                        <input asp-for="LastName" type="text" required="" id="lastName" class="form-control border-0" placeholder="Doe" aria-label="Last name" />
                                                        <span class="material-icons input-group-text border-0 text-muted">person</span>
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label asp-for="Email" class="form-label">Email</label>
                                            <div class="input-group">
                                                <input asp-for="Email" id="inputEmail" required="" type="email" placeholder="johndoe@gmail.com" class="form-control border-0 px-2 text-muted" />
                                                <span class="material-icons input-group-text border-0 text-muted">mail</span>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group mb-3">

                                            <div class="row">
                                                <div class="col-md-6 col-12">
                                                    <label asp-for="Password" class="form-label">Password</label>
                                                    <div class="input-group">
                                                        <input asp-for="Password" id="inputPassword1" type="password" required="" placeholder="••••••••••••••" class="form-control border-0 px-2 text-muted" />
                                                        <span onmousedown="passReveal(getElementById('inputPassword1'))" id="visibility" class="material-icons input-group-text border-0 text-muted">visibility</span>
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-md-6 col-12">
                                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                                    <div class="input-group">
                                                        <input asp-for="ConfirmPassword" id="inputPassword2" type="password" required="" placeholder="••••••••••••••" class="form-control border-0 px-2 text-muted" />
                                                        <span asp-validation-for="ConfirmPassword" onmousedown="passReveal(getElementById('inputPassword2'))" id="visibility" class="material-icons input-group-text border-0 text-muted">visibility</span>
                                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="custom-control custom-checkbox mb-3">
                                            <input id="customCheck1" type="radio" checked class="custom-control-input" />
                                            <label for="customCheck1" class="check-label custom-control-label">Contains at least one uppercase letter</label><br />
                                            <input id="customCheck2" type="radio" checked class="custom-control-input" />
                                            <label for="customCheck2" class="check-label custom-control-label">Contains at least one special character</label><br />
                                            <input id="customCheck3" type="radio" checked class="custom-control-input" />
                                            <label for="customCheck3" class="check-label custom-control-label">Contains at least one number</label><br />
                                            <input id="customCheck4" type="radio" checked class="custom-control-input" />
                                            <label for="customCheck4" class="check-label custom-control-label">Passwords are matching</label>
                                        </div>


                                        <div class="form-group">
                                            <input type="submit" value="Sign Up" class="btn btn-primary btn-block border-0 mt-3 w-100 shadow-sm" />
                                        </div>

                                        <div>
                                            <p class="text-center mt-1" id="signup">
                                                Already have an account?
                                                @*<a href="signup.html"> Sign Up</a>*@
                                                <a asp-action="Login" class="text-info">Sign In</a>
                                            </p>
                                        </div>



                                    </form>


                                </div>
                            </div>
                        </div>
                        <!-- End -->
                    </div>
                </div>
                <!-- End -->
            </div>
        </div>
        @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>*@
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts
    {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
</body>
</html>
